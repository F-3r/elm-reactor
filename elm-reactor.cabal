Extra-source-files:  README.md
Cabal-version:       >=1.8

source-repository head
  type:     git
  location: git://github.com/elm-lang/elm-reactor.git

Executable elm-reactor
  ghc-options:
    -threaded -O2 -W

  hs-source-dirs:
    backend

  Main-is:
    Main.hs

  other-modules:
    Compile,
    Index,
    Socket,
    Utils

  Build-depends:
    aeson >= 0.8,
    base >=4.2 && <5,
    blaze-html,
    blaze-markup,
    bytestring,
    cmdargs,
    containers >= 0.3,
    directory >= 1.2,
    elm-compiler >= 0.15.1 && < 0.16,
    filepath,
    fsnotify >= 0.1.0.2,
    HTTP,
    mtl,
    process,
    snap-core,
    snap-server,
    system-filepath,
    text,
    time,
    transformers,
    unordered-containers,
    websockets >= 0.9 && < 0.10,
    websockets-snap >= 0.8.2.1
